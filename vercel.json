{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "env": {
    "NEXT_PUBLIC_TMDB_API_KEY": "@next-public-tmdb-api-key",
    "NEXT_PUBLIC_FLIX_API_KEY": "@next-public-flix-api-key"
  },
  "images": {
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "image.tmdb.org",
        "port": "",
        "pathname": "/t/p/**"
      },
      {
        "protocol": "https",
        "hostname": "img.youtube.com",
        "port": "",
        "pathname": "/vi/**"
      }
    ]
  }
}
